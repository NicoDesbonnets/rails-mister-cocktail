<div class="cocktail-detail-card">
  <div class="cocktail-detail text-center">
    <h1><%= @cocktail.name %></h1>
    <ul style='list-style: none; padding-left: 0px'>
      <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "Delete", dose_path(dose), method: :delete %> </li>
      <% end %>
    </ul>
    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
  </div>
</div>
